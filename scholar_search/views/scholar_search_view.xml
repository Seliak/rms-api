<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_scholar_search_form" model="ir.ui.view">
        <field name="name">scholar.search.form</field>
        <field name="model">scholar.search</field>
        <field name="arch" type="xml">
            <form string="Scholar Search">
                <sheet>
                    <group>
                        <field name="author_name"/>
                    </group>
                    <footer>
                        <button string="Search" type="object" name="search_articles" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_scholar_search" model="ir.actions.act_window">
        <field name="name">Search</field>
        <field name="res_model">scholar.search</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_scholar_search" name="Search" parent="menu_scholar_root" action="action_scholar_search"/>
</odoo>
